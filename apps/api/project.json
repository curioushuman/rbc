{
  "root": "apps/api",
  "sourceRoot": "apps/api/src",
  "projectType": "application",
  "targets": {
    "docker-dev": {
      "executor": "@nrwl/workspace:run-commands",
      "outputs": [],
      "dependsOn": [
        {
          "target": "build",
          "projects": "self"
        }
      ],
      "options": {
        "commands": [
          "docker build -f ./apps/api/Dockerfile . --target development -t curioushuman/rbc-api"
        ],
        "parallel": false
      }
    },
    "docker-test": {
      "executor": "@nrwl/workspace:run-commands",
      "outputs": [],
      "dependsOn": [
        {
          "target": "build",
          "projects": "self"
        }
      ],
      "options": {
        "commands": [
          "docker build -f ./apps/api/Dockerfile . --target test -t curioushuman/rbc-api"
        ],
        "parallel": false
      }
    },
    "docker-prod": {
      "executor": "@nrwl/workspace:run-commands",
      "outputs": [],
      "dependsOn": [
        {
          "target": "build",
          "projects": "self"
        }
      ],
      "options": {
        "commands": [
          "docker build -f ./apps/api/Dockerfile . --target production -t curioushuman/rbc-api:{args.tag}"
        ],
        "parallel": false
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/api/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/api"],
      "options": {
        "jestConfig": "apps/api/jest.config.js",
        "passWithNoTests": true
      }
    },
    "test-unit": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/api"],
      "options": {
        "jestConfig": "apps/api/jest.config-unit.js",
        "passWithNoTests": true
      }
    },
    "test-integration": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/api"],
      "options": {
        "jestConfig": "apps/api/jest.config-integration.js",
        "passWithNoTests": true
      }
    },
    "pre-test-e2e": {
      "executor": "@nrwl/workspace:run-commands",
      "outputs": [],
      "options": {
        "commands": [
          "cat skaffold.yaml | sed 's/target: development/target: test/' | tee skaffold-tmp.yaml",
          "mv skaffold-tmp.yaml skaffold.yaml"
        ],
        "parallel": false
      }
    },
    "pre-dev": {
      "executor": "@nrwl/workspace:run-commands",
      "outputs": [],
      "options": {
        "commands": [
          "cat skaffold.yaml | sed 's/target: test/target: development/' | tee skaffold-tmp.yaml",
          "mv skaffold-tmp.yaml skaffold.yaml"
        ],
        "parallel": false
      }
    }
  },
  "tags": []
}
